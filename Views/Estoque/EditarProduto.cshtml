@model EstoqueModel
@{
    ViewData["Title"] = "Editar Estoque";
}
<div class="Card">
    <p class="Title">Editar "@Model.Nome"</p>
    <div classe="d-flex justify-content-center w-100 px-5 p-5">
    <form asp-action="ValidarEdit" asp-controller="Estoque">
        <input type="hidden" value="@Model.Id" asp-for="@Model.Id">
        <div class="mb-3">
            <label for="nomeProduto" class="form-label">Nome:</label>
            <input type="text" class="form-control" id="nomeProduto" placeholder="@Model.Nome" asp-for="@Model.Nome">
        </div>
        <div class="mb-3">
            <label for="qtdTotal" class="form-label">Quantidade Total:</label>
            <input type="number" class="form-control" id="qtdTotal" placeholder="@Model.QuantidadeTotal"
                asp-for="@Model.QuantidadeTotal" min="@Model.Alugados">
        </div>
        <div>
            <label for="valorDiaria" class="form-label">Valor Di√°ria:</label>
            <input type="number" class="form-control" id="valorDiaria" 
                asp-for="@Model.ValorUnid" min=0 step="0.01">
        </div>
        <div class="d-flex justify-content-between">
            <a role="button" asp-controller="Estoque" asp-action="Index" class="btn btn-danger mt-3">Cancelar</a>
            <button type="submit" class="btn btn-success mt-3">Confirmar</button>
        </div>
    </form>
</div>

</div>